<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#005C02" />
            <stroke
                android:width="1dp"
                android:color="#004A01" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="15dp"
                android:right="10dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#017303"
                android:endColor="#005C02"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#004A01" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>