<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF0000" />
            <stroke
                android:width="1dp"
                android:color="#330000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="15dp"
                android:right="10dp"
                android:bottom="15dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF6347"
                android:endColor="#FF0000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF3333" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>