<?xml version="1.0" encoding="UTF-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools" 
	android:id="@+id/scroll_view"
	style="@style/scroll_view">

<TableLayout style="@style/table_layout_7inch">

    <!-- Row 1 with single column -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView 
            android:id="@+id/game_over"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"            
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:textSize="40sp"
            android:layout_span="3"
            android:textStyle="bold"
            android:textColor="#000000"       
            android:text="@+id/game_over" />
    </TableRow>

    <!-- Row 2 -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/correct_answer"
			    style="@style/TableRow_7inch"
			    android:textStyle="bold"
				android:text="@+id/correct_answer" />

			<TextView 
			    android:id="@+id/number_correct_answer"
			    style="@style/TableRow_7inch"
				android:text="@+id/number_correct_answer" />
			
			<TextView
			    android:id="@+id/point_correct_answer"
			    style="@style/TableRow_7inch"
			    android:text="@string/point_correct" />

    </TableRow>

    <!-- Row 3 -->

	<TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/wrong_answer"
			    style="@style/TableRow_7inch"
			    android:textStyle="bold"
				android:text="@+id/wrong_answer" />

			<TextView 
			    android:id="@+id/number_wrong_answer"
			    style="@style/TableRow_7inch"
				android:text="@+id/number_wrong_answer" />
			
			<TextView 
			    android:id="@+id/point_wrong_answer"
			    style="@style/TableRow_7inch"
				android:text="@string/point_wrong" />
    </TableRow>
    
	<!-- Row 4 -->

	<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/point"
			    style="@style/TableRow_7inch"
			    android:textStyle="bold"
				android:text="@+id/point" />

			<TextView 
			    android:id="@+id/point_value"
			    style="@style/TableRow_7inch"
				android:text="@+id/point_value" />
    </TableRow>    

	<!-- Row 5 -->

	<TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/rate"
			    style="@style/TableRow_7inch"
			    android:textStyle="bold"
				android:text="@+id/rate" />

			<TextView 
			    android:id="@+id/rate_value" 
			    style="@style/TableRow_7inch"
				android:text="@+id/rate_value" />
    </TableRow>
    
	<!-- Buttons -->
	<Button 
	    android:id="@+id/review" 
	   	style="@style/button_7inch"		   	
		android:text="@+id/review"/>
	
   	<Button 
	    android:id="@+id/back"	    
		style="@style/button_7inch"
		android:text="@+id/back" />
	
</TableLayout>
</ScrollView>