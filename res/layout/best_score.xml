<?xml version="1.0" encoding="UTF-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools" 
	android:id="@+id/scroll_view"
	style="@style/scroll_view">

<TableLayout
    style="@style/table_layout">

    <!-- Row 1 with single column -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView 
            android:id="@+id/best_score"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"            
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_span="3"
            android:textStyle="bold"
            android:textColor="#000000"       
            android:text="@+id/best_score" />
    </TableRow>

    <!-- Row 2 -->

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/easy"
			    style="@style/TableRow"
			    android:textStyle="bold"
				android:text="@+id/easy" />

			<TextView 
			    android:id="@+id/score_easy"
			    style="@style/TableRow"
				android:text="@+id/score_easy" />

			<TextView 
			    android:id="@+id/rate_easy"
			    style="@style/TableRow"
				android:text="@+id/rate_easy" />
    </TableRow>

    <!-- Row 3 -->

	<TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/medium"
			    style="@style/TableRow"
			    android:textStyle="bold"
				android:text="@+id/medium" />

			<TextView 
			    android:id="@+id/score_medium"
			    style="@style/TableRow"
				android:text="@+id/score_medium" />

			<TextView 
			    android:id="@+id/rate_medium"
			    style="@style/TableRow"
				android:text="@+id/rate_medium" />
    </TableRow>
    
	<!-- Row 4 -->

	<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/hard"
			    style="@style/TableRow"
			    android:textStyle="bold"
				android:text="@+id/hard" />

			<TextView 
			    android:id="@+id/score_hard"
			    style="@style/TableRow"
				android:text="@+id/score_hard" />

			<TextView 
			    android:id="@+id/rate_hard"
			    style="@style/TableRow"
				android:text="@+id/rate_hard" />
    </TableRow>    

	<!-- Row 5 -->

	<TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        	<TextView 
			    android:id="@+id/all_plates"
			    style="@style/TableRow"
			    android:textStyle="bold"
				android:text="@+id/all_plates" />

			<TextView 
			    android:id="@+id/score_all_plates" 
			    style="@style/TableRow"
				android:text="@+id/score_all_plates" />

			<TextView 
			    android:id="@+id/rate_all_plates"			    
				style="@style/TableRow"
				android:text="@+id/rate_all_plates" />
    </TableRow>
    
	<!-- Row 6 -->

	<TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        	<TextView 
			    android:id="@+id/no_fault"	    
				style="@style/TableRow"
				android:textStyle="bold"
				android:text="@+id/no_fault" />

			<TextView 
			    android:id="@+id/score_no_fault" 
			   	style="@style/TableRow"
				android:text="@+id/score_no_fault"/>

			<TextView 
			    android:id="@+id/rate_no_fault"			    
				style="@style/TableRow"
				android:text="@+id/rate_no_fault" />
    </TableRow>
    
	<!-- Buttons -->
	<Button
 	   android:id="@+id/stats"
       style="@style/button"            
       android:text="@+id/stats" />
 	
</TableLayout>
</ScrollView>