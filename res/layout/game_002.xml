<?xml version="1.0" encoding="UTF-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/scroll_view"
	style="@style/scroll_view">

	<LinearLayout style="@style/linear_layout">

		<ImageView
		    android:id="@+id/image_plate"
		    style="@style/image"
		    android:contentDescription="@+id/image_plate"
		    android:scaleType="fitXY" />

		<LinearLayout  
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:gravity="right"
			android:padding="5dp">

			<TextView 
			    android:id="@+id/progress" 
			    style="@style/textView"
				android:layout_width="wrap_content" 
				android:text="@+id/progress" />

			<TextView 
			    android:id="@+id/total" 
			    style="@style/textView"
				android:layout_width="wrap_content" 
				android:text="@+id/total" />
		</LinearLayout>

		<Button 
		    android:id="@+id/button1" 
		    style="@style/button"
			android:text="@id/button1" />

		<Button 
		    android:id="@+id/button2" 
		    style="@style/button"
			android:text="@id/button2" />

		<Button 
		    android:id="@+id/button3" 
		    style="@style/button"
			android:text="@id/button3" />

		<Button 
		    android:id="@+id/button4" 
		    style="@style/button"
			android:text="@id/button4" />
	</LinearLayout>

</ScrollView>