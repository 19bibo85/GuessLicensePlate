<?xml version="1.0" encoding="UTF-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:windowTitleBackgroundStyle="@style/WindowTitleBackground"
	android:id="@+id/scroll_view"
	style="@style/scroll_view">

	<LinearLayout
	    android:id="@+id/Setting" 
	    style="@style/linear_layout">

		<TextView 
		    android:id="@+id/language"
		    style="@style/textView"
			android:layout_width="wrap_content"
			android:text="@+id/language" />

		<Spinner 
		    android:id="@+id/language_spinner"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
		
		<TextView 
		    android:id="@+id/theme" 
		    style="@style/textView"
			android:layout_width="wrap_content"
			android:text="@+id/theme" />

		<Spinner 
		    android:id="@+id/theme_spinner" 
		    android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView 
		    android:id="@+id/range" 
		    style="@style/textView"
			android:layout_width="wrap_content"
			android:text="@+id/range" />

		<Spinner 
	    	android:id="@+id/range_spinner" 
	    	android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView 
	    	android:id="@+id/sound" 
	    	style="@style/textView"
			android:layout_width="wrap_content"  
			android:text="@+id/sound" />

		<ToggleButton 
		    android:id="@+id/sound_toggleButton" 
		    style="@style/button"
			android:text="@id/sound_toggleButton" />
				
		<Button 
		    android:id="@+id/clear" 
		    style="@style/button"
			android:text="@id/clear" />	

	</LinearLayout>
</ScrollView>